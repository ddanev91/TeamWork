@{
    ViewBag.Title = "Home Page";
}


<div class="row">
    <div class="post col-md-6">
        <h2 class="title">Information for my TeamWork</h2>
        <p>
            About my TeamWork....//ToDo..
        </p>
    </div>
</div>

@model List<TeamWork.Models.Post>

<section class="row">


    @foreach (var post in Model)
    {

        <article class="post col-md-6">
            <h2 class="title">@post.Title</h2>
            <div class="about">

                Post
                @if (post.Author != null)
                {
                    @:by
                    <i>@post.Author.FullName ( @post.Author.UserName )</i>

                }
                on
                <i>@post.Date</i>
            </div>
            <div class="body">
               @Html.Raw(post.Body)
            </div>

        </article>

    }



</section>

